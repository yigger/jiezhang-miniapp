$header-height ?= 68PX
$bottom-height ?= 60PX

.page-root-component {
  display flex
  flex-direction column
  height 100vh

  > .page-root__header-component {
    display flex
    align-items center
    width 100%
    height $header-height

    padding-left 1em
    padding-right 100PX
    background $primaryBgColor
    color $primaryBgTextColor
    transition $header-height 200ms

    .header-title {
      color: $primaryColor
    }
  }

  > .page-root__tab-bar-component {
    display flex
    align-items center
    height $bottom-height
    width 100%
    border-top: 1PX solid $borderColor
    > view {
      &:not(:last-child) {
        height: 100%
        border-right: 1PX solid #f9f9f9
      }

      &.active {
        color: $primaryColor
      }
    }
  }

  > .page-root__main-content {
    flex: 1
    max-height: "calc(100% - %s - %s)" % ($header-height $bottom-height)
    overflow: scroll
  }
}