
$default = {
  primaryColor: #2196F3
  primaryBgColor: #2196F3
  primaryBgTextColor: #ffffff
  textColor: #212121
  secondaryText: #757575
  borderColor: #f4f4f4
  backgroundColor: #f4f4f4
}

$pure = {
  primaryColor: #cccccc
  primaryBgColor: #ffffff
  primaryBgTextColor: #ffffff
  textColor: #212121
  secondaryText: #757575
  borderColor: #f4f4f4
  backgroundColor: #f4f4f4
}

$themes = {
  default: $default,
  pure: $pure
}

for themeKey, _ in $themes {
  $primaryColor = $themes[themeKey]['primaryColor']
  $primaryBgColor = $themes[themeKey]['primaryBgColor']
  $primaryBgTextColor = $themes[themeKey]['primaryBgTextColor']
  $textColor = $themes[themeKey]['textColor']
  $secondaryText = $themes[themeKey]['secondaryText']
  $borderColor = $themes[themeKey]['borderColor']
  $backgroundColor = $themes[themeKey]['backgroundColor']
  
  .jz-theme-{themeKey} {
    @import "./root"
    @import "./components/button"
    @import "./components/tab"
  }
}
