.statement-form__expend-form {
  .f-column {
    border-bottom: 1px solid #f4f4f4
  }
  .statement-form__quick-select {
    text-align: right
    background: $backgroundColor
  }
  .statement-form__quick-select > .ui.label {
    display: inline-block
    background: #dcecf5
    padding: 6PX
    margin: 8PX 6PX
    border-radius: 6PX
    font-size: 14PX
  }
}

.statement-form__category-select {
  background: rgba(0,0,0, 0.5)
  position: fixed
  bottom: 0
  height: 100vh
  width: 100%
  z-index: 9999
  .category-select__main {
    background: #f9f9f9
    border-radius: 6PX 6PX 0 0;
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    height: 80%
    overflow-y: auto
  }
  .category-list__item {
    display: inline-block
    text-align: center
    width: 20%
    margin: 12PX 0
    image {
      width: 30PX
      height: 30PX
    }
  }
  .category-select__header {
    font-weight: bold
    font-size: 16PX
    margin: 12PX 
  }
}